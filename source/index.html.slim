.row
  .col-md-6
    - page_articles('news')[0...3].each_with_index do |article, i|
      .entry
        h4
          = link_to article.title, article
        .description   
            = " " + article.date.strftime('%d/%m/%y') + ", " + article.data.author
        = article.summary(150)
  .col-md-6
    - page_articles('lectures')[0...3].each_with_index do |article, i|
      .entry
        h4
          = link_to article.title, article
        .description   
            = " " + article.date.strftime('%d/%m/%y') + ", " + article.data.author
        = article.summary(150)